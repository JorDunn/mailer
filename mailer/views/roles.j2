{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <a href="{{ url_for('.roles') }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Role</a>
            </div>
            <div class="col-lg-6 text-right">
                <h2>Roles</h2>
            </div>
        </div>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
            <tr>
                <td><a href="{{ url_for('mailer.routes.roles_edit', role_id=role.rid) }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ role.name }}</th>
                <td><a href="{{ url_for('mailer.routes.roles_remove', role_id=role.rid) }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}