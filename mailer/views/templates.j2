{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
    <a href="/templates/add?token={{ token }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Template</a>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Date added</th>
                <th scope="col">Expires on</th>
                <th scope="col">Added by</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for tpl in template_list.values() %}
            <tr>
                <td><a href="/templates/edit/{{ tpl.template_id }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row"><a href="/templates/view/{{ tpl.template_id }}">{{ tpl.name }}</a></th>
                <td>{{ tpl.added }}</td>
                <td>{% if tpl.expires == None %}Never{% else %}{{ tpl.expires }}{% endif %}</td>
                <td>{{ tpl.author }}</td>
                <td><a href="/templates/remove/{{ tpl.template_id }}?token={{ token }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}