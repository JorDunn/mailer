{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
    <div class="row">
            <div class="col-lg-12 text-right">
                <h2>Franchises</h2>
            </div>
        </div>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <form action="/admin/franchises/add/do?token={{ token }}" method="post" class="form">
                    <td></td>
                    <th scope="row"><input type="input" name="name" value="Franchise Name" class="form-control"></th>
                    <td><button type="submit" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Franchise</button></td>
                </form>
            </tr>
            {% for franchise in franchises %}
            <tr>
                <td><a href="/admin/franchises/edit/{{ franchise.franchise_id }}?token={{ token }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ franchise.name }}</th>
                <td><a href="/admin/franchises/remove/{{ franchise.franchise_id }}?token={{ token }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}