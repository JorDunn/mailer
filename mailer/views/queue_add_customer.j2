{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-8 offset-lg-2">
    {% with messages = get_flashed_messages(category_filter=['queue_error']) %}
        {% for message in messages %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}
    {% endwith %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Add Customer</h5>
            <form action="{{ url_for('mailer.routes.queue_add') }}" method="post">
                <div class="row">
                <div class="form-group col-lg-6">
                    <label for="first_name">First Name</label>
                    <input name="first_name" type="text" class="form-control" value="{{ customer.first_name }}">
                </div>
                <div class="form-group col-lg-6">
                    <label for="last_name">Last Name</label>
                    <input name="last_name" type="text" class="form-control" value="{{ customer.last_name }}">
                </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="email">Email</label>
                        <input name="email" type="email" class="form-control" value="{{ customer.email }}">
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="template">Template</label>
                        <select name="template" class="form-control">
                            {% for template in templates.values() %}
                            <option value="{{ template.tid }}">{{ template.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                <button type="submit" class="btn btn-primary float-right"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}