{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-8 offset-lg-2">
    {% with messages = get_flashed_messages(category_filter=['template_error']) %}
        {% for message in messages %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}
    {% endwith %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Add Template</h5>
            <form action="/templates/add" method="post">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control">
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="subject">Subject</label>
                        <input type="text" name="subject" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="body">Template Text</label>
                    <textarea rows="10" name="body" class="form-control"></textarea>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="expires">Expires on</label>
                        <input type="date" name="expires" class="form-control">
                    </div>
                </div>
                <input type="hidden" name="added_by" value="{{ g.user.uid }}">
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                <button class="btn btn-primary float-right" type="submit"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}