{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
    <a href="/customers/add?token={{ token }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Customer</a>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
            <tr>
                <td><a href="/customers/edit/{{ customer.customer_id }}?token={{ token }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ customer.email }}</th>
                <td>{{ customer.first_name }} {{ customer.last_name }}</td>
                <td>{{ customer.phone }}</td>
                <td><a href="/customers/remove/{{ customer.customer_id }}?token={{ token }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}