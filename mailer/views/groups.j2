{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
    <div class="row">
            <div class="col-lg-6">
                <a href="{{ url_for('.groups') }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Group</a>
            </div>
            <div class="col-lg-6 text-right">
                <h2>Groups</h2>
            </div>
        </div>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Subgroups</th>
                <th scope="col">Users</th>
                <th scope="col">Email Settings</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for group in groups.values() %}
            {% if group.name != "Null" %}
            <tr>
                <td><a href="{{ url_for('mailer.routes.groups_edit', group_id=group.gid) }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ group.name }}</th>
                <td><a href="{{ url_for('mailer.routes.groups_subgroups', group_id=group.gid) }}">View</a></td>
                <td><a href="{{ url_for('mailer.routes.groups_users', group_id=group.gid) }}">View</a></td>
                <td><a href="{{ url_for('mailer.routes.groups_email', group_id=group.gid) }}">View</a></td>
                <td><a href="{{ url_for('mailer.routes.groups_remove', group_id=group.gid) }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endif %}
            {% endfor %}
        </tbody>
    </table>
    {% if groups|length <= 1 %}
        <h4 class="text-center">No groups have been added.</h4>
    {% endif %}
    </div>
</div>
{% endblock %}