{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
    <div class="row">
            <div class="col-lg-12 text-right">
                <h2>Franchises</h2>
            </div>
        </div>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <form action="{{ url_for('mailer.admin_routes.franchises_add_do', token=token) }}" method="post" class="form">
                    <td></td>
                    <th scope="row"><input type="input" name="name" placeholder="Franchise Name" class="form-control"></th>
                    <td><button type="submit" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Franchise</button></td>
                </form>
            </tr>
            {% for franchise in franchises %}
            {% if franchise.name != "Null" %}
            <tr>
                <td><a href="{{ url_for('mailer.admin_routes.franchises_edit', franchise_id=franchise.franchise_id, token=token) }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ franchise.name }}</th>
                <td><a href="{{ url_for('mailer.admin_routes.franchises_remove', franchise_id=franchise.franchise_id, token=token) }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endif %}
            {% endfor %}
        </tbody>
    </table>
    {% if franchises|length == 1 %}
        <h4 class="text-center">No franchises have been added.</h4>
    {% endif %}
    </div>
</div>
{% endblock %}