{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <a href="{{ url_for('.users') }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add User</a>
            </div>
            <div class="col-lg-6 text-right">
                <h2>Users</h2>
            </div>
        </div>
    <br/><br/>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Username</th>
                <th scope="col">Group</th>
                <th scope="col">Name</th>
                <th scope="col">Is Admin</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td><a href="{{ url_for('mailer.routes.users_edit', user_id=user.uid) }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                <th scope="row">{{ user.username }}</th>
                <td>{% if user.subgroup.name %}{{ user.subgroup.name }}{% else %}{{ user.group.name }}{% endif %}</td>
                <td>{{ user.first_name }} {{ user.last_name }}</td>
                <td>{{ user.is_admin }}</td>
                <td><a href="{{ url_for('mailer.routes.users_remove', user_id=user.uid) }}" style="color:red"><span class="oi oi-delete"></span></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}