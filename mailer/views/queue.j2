{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <a href="/queue/add?token={{ token }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add to Queue</a>
            </div>
            <div class="col-lg-6 text-right">
                <h2>Email Queue</h2>
            </div>
        </div>
        <br/><br/>
        <table class="table table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for items in queue.values() %}
                    <tr>
                        <td><a href="customers/edit/{{ items.customer_id }}?token={{ token }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                        <th scope="row">{{ items.email }}</th>
                        <td>{{ items.first_name }} {{ items.last_name }}</td>
                        <td>{{ items.phone }}</td>
                        <td><a href="/queue/remove/{{ items.queue_id }}?token={{ token }}" style="color:red"><span class="oi oi-delete"></span></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if queue|length == 0 %}
            <h4 class="text-center">No items in queue.</h4>
        {% endif %}
    </div>
</div>
{% endblock %}