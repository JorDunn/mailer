{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <a href="/queue/add" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add to Queue</a>
            </div>
            <div class="col-lg-6 text-right">
                <h2>Email Queue</h2>
            </div>
        </div>
        <br/><br/>
        <table class="table table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Template</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for item in queue.values() %}
                    <tr>
                        <td><a href="{{ url_for('.customers_edit', customer_id=item.cid) }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                        <th scope="row">{{ item.email }}</th>
                        <td>{{ item.first_name }} {{ item.last_name }}</td>
                        <td>{{ item.template }}</td>
                        <td><a href="{{ url_for('.queue_remove', queue_id=item.qid) }}" style="color:red"><span class="oi oi-delete"></span></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if queue|length == 0 %}
            <h4 class="text-center">No items in queue.</h4>
        {% endif %}
    </div>
</div>
{% endblock %}