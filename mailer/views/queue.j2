{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-10 offset-lg-1">
    <div class="col-lg-12">
        <a href="/queue/add?token={{ token }}" class="btn btn-primary"><span class="oi oi-plus"></span>&nbsp;&nbsp;Add Customer</a>
        <br/><br/>
        <table class="table table-striped text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Phone</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for items in queue %}
                    <tr>
                        <td><a href="queue/edit/{{ queue[items]['queue_id'] }}?token={{ token }}" style="color:navy"><span class="oi oi-pencil"></span></a></td>
                        <th scope="row">{{ queue[items]['email'] }}</th>
                        <td>{{ queue[items]['first_name'] }}</td>
                        <td>{{ queue[items]['last_name'] }}</td>
                        <td>{{ queue[items]['phone'] }}</td>
                        <td><a href="/queue/remove/{{ queue[items]['queue_id'] }}?token={{ token }}" style="color:red"><span class="oi oi-delete"></span></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}