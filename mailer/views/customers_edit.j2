{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-8 offset-lg-2">
    {% with messages = get_flashed_messages() %}
    {% if messages %}
        {% for message in messages %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}
    {% endif %}
    {% endwith %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Update Customer</h5>
            <form action="/customers/edit/do?token={{ token }}" method="post">
                <div class="row">
                <div class="form-group col-lg-6">
                    <label for="first_name">First Name</label>
                    <input name="first_name" type="text" class="form-control" value="{{ customer.first_name }}">
                </div>
                <div class="form-group col-lg-6">
                    <label for="last_name">Last Name</label>
                    <input name="last_name" type="text" class="form-control" value="{{ customer.last_name }}">
                </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="email">Email</label>
                        <input name="email" type="email" class="form-control" value="{{ customer.email }}">
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="phone">Phone Number</label>
                        <input name="phone" type="tel" class="form-control" value="{{ customer.phone }}">
                    </div>
                </div>
                <input type="hidden" name="customer_id" value="{{ customer.customer_id }}">
                <button type="submit" class="btn btn-primary float-right"><span class="oi oi-loop"></span>&nbsp;&nbsp;Update</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}