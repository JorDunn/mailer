{% extends "base.j2" %}

{% block content %}
<br/><br/>
<div class="col-lg-8 offset-lg-2">
    {% with messages = get_flashed_messages(category_filter=['template_error']) %}
        {% for message in messages %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}
    {% endwith %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Edit Template</h5>
            <form action="/templates/edit/do?token={{ token }}" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" value="{{ template.name}}">
                    <small id="titleHelp" class="form-text text-muted">This will be the subject of the email.</small>
                </div>
                <div class="form-group">
                    <label for="base">Template Base</label>
                    <input type="text" name="base" class="form-control" value="base.mjml">
                    <small id="baseHelp" class="form-text text-muted">This is the base template filename located in the mjml folder.</small>
                </div>
                <div class="form-group">
                    <label for="template">Template Code</label>
                    <textarea name="template" class="form-control">{{ template.body }}</textarea>
                    <small id="templateHelp" class="form-text text-muted">This will be the body of the email.</small>
                </div>
                <div class="form-group">
                    <label for="expires">Expires on </label>
                    <input type="date" name="expires" class="form-control" value="{% if template.expires != None %}{{ template.expires.strftime("%Y-%m-%d") }}{% endif %}">
                </div>
                <input type="hidden" name="template_id" value="{{ template.template_id }}">
                <button class="btn btn-primary float-right" type="submit"><span class="oi oi-loop"></span>&nbsp;&nbsp;Update</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}